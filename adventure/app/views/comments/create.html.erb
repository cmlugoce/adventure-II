<h1>Comments#create</h1>
<p>Find me in app/views/comments/create.html.erb</p>
<h3>Post a Comment</h3>
<%= form_for [ @trail, @comment ] do |f| %>
  <p>
    <%= f.label :user %><br/>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
